<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Products</h1>
            <% if signed_in? %>
                <div class="links text-right">
                    <%= link_to 'New product', new_product_path, class: 'btn btn-primary'%>
                </div>
            <% end %>
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>URL</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                <% @products.each do |product| %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= link_to product.name, product %></td>
                        <td><%= product.url %></td>
                        <td><%= product.description %></td>
                        <td>
                        <% if signed_in? %>
                            <%= link_to 'Edit', edit_product_path(product) %> |
                            <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Â¿Deseas eliminar este producto?'} %>
                        <% end %>
                        </td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
