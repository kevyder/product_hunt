<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h1>New product</h1>
            <%= form_for @product do |f| %>
                <div class="form-group">
                    <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Name of the product'%>
                </div>
                <div class="form-group">
                    <%= f.url_field :url, class: 'form-control input-lg', placeholder: 'URL'%>
                </div>
                <div class="form-group">
                    <%= f.text_area :description, class: 'form-control input-lg', placeholder: 'Description of the product'%>
                </div>
                <div class="form-group">
                    <%= f.submit 'Save product', class: 'btn btn-primary btn-lg btn-block'%>
                </div>
            <% end %>
        </div>
    </div>
</div>